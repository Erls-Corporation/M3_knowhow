<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="Preferences">
	<PreferenceCategory android:title="GPS">
        <CheckBoxPreference
            android:title="Koristiti GPS?"
            android:defaultValue="true"
            android:summary="Koristiti GPS uslugu u aplikaciji."
            android:key="checkbox" />
        <RingtonePreference
            android:title="Radius"
            android:summary="Koji radius koristiti kod pretrage"
            android:key="list"
            android:entries="@array/radiusNames"
		    android:entryValues="@array/radiusValues" />
	</PreferenceCategory>
</PreferenceScreen>
